<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="c:\temp\vakt-nlog-internal.log"
      internalLogLevel="Error" >

	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
		<add assembly="NLog.Targets.Splunk" />
	</extensions>

	<variable name="layout-common" value="${date}|App=InteractionOfficeBot|Env=${aspnet-environment}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties} ${exception:format=ToString}"/>

	<!-- the targets to write to -->
	<targets async="true">
		<!-- write logs to file -->
		<target xsi:type="File" name="file" fileName="logs\InteractionOfficeBot.log" layout="${layout-common}" />
		<target xsi:type="File" name="file-net" fileName="logs\InteractionOfficeBot.log" layout="${layout-common} &lt;-- ${aspnet-request-ip}" />

		<target xsi:type="ColoredConsole" name="console" layout="${date:format=HH\:mm\:ss.fff}|${logger}|${message} ${exception}|${all-event-properties}" >
			<highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
			<highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
			<highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
			<highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
			<highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
		</target>

	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="Microsoft.AspNetCore*" maxLevel="Debug" final="true" />
		<logger name="*" minlevel="Debug" writeTo="file, console" />
	</rules>
</nlog>